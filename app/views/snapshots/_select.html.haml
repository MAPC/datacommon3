= form_tag '', method: :get do
  = select_tag :slug, options_for_area(nil, selected), include_blank: true, id: 'area-select', class: 'chosen-select', data: { placeholder: "Choose a municipality or subregion" }

:javascript

$(document).on('ready', function () {
  
  $('#area-select').on('change', function () {
    var url = $( this ).val();               // get selected value
    if (url) {                               // require a URL
      window.location = "/snapshots/" + url; // redirect
    }
    return false;
  });

});