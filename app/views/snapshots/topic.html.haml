%h1= link_to "< #{@s.geography}", @s.geography
%h2= @s.topic

- @s.visualizations.each do |vis|
  .col-md-4.col-sm-6.col-xs-12.center.snapshot-preview
    .snapshot-preview-title= vis.title
    %img.snapshot-vis{id: "vis-#{vis.id}", src: "http://unsplash.it/400/400?random"}
    :javascript

      $(document).on('ready', function () {
        DC.embedWeaveOnClick("#vis-#{vis.id}", '#{@s.geography_slug}', '#{@s.area_type_name.pluralize}');
      });