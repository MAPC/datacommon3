.form.vis-form{role: 'form'}
  = form_for @visualization, remote: true, format: :json do |f|
    .col-md-9.col-sm-12.feature

      - if params[:action] == 'new'
        #new
      - else
        %img.feature{id: "#{@visualization.id}", src: @visualization.image.url}
        %p.pre-weave
          %small Click to activate interactive visualization. (Flash required)

      .row
        .col-xs-12
          .panel-group#accordion{role: "tablist", aria: { multiselectable: "true" }}
            .panel.panel-default
              .panel-heading#headingOne{role:"tab"}
                %h4.panel-title
                  %a{ data: {toggle:"collapse", parent: "#accordion"}, href: "#collapseOne", aria: {expanded: "true", controls: "collapseOne"}}
                    Visualization Help
                    %small (click to open)
              #collapseOne.panel-collapse.collapse{role: "tabpanel", aria: {labelledby: "headingOne"}}
                .panel-body
                  %p To get started creating a visualization: 
                  %ol
                    .col-sm-4.col-xs-12
                      %li Select from the "Tools" menu above to add a visualization type. Examples: Add Map; Add Bar Chart.
                    .col-sm-4.col-xs-12
                      %li
                        Modify the settings by clicking the gear icon in the top left corner. Load data and customize the display of the visualization. Visit the
                        %a{href: '/tutorals'} Tutorials page
                        for further guidance.
                    .col-sm-4.col-xs-12
                      %li Populate attributes on the right with Title, Abstract, Data Sources, etc. before clicking the "Create" button to save your visualization.
                  .row
                    .col-xs-12
                      %p More resources:
                      %ul
                        %li= link_to 'Weave Training [PDF]',       'resources/weave-training-2014.pdf',        target: '_blank'
                        %li= link_to 'Adding Your Own Data [PDF]', 'resources/add-your-own-data.pdf',          target: '_blank'
                        %li= link_to 'Case Study Steps [PDF]',     'resources/case-study.pdf',                 target: '_blank'
                        %li= link_to 'Data for Case Study [XLSX]', 'resources/Ã§ase-study.xls',                 target: '_blank'
                        %li= link_to 'Instructional video',        'http://www.youtube.com/embed/Q8E10dy1hR4', target: '_blank'

    .col-md-3.col-sm-12

      .form-group
        = f.label      :title
        = f.text_field :title, class: 'form-control',    placeholder: "Your Visualization's Title"
      

      .form-group
        = f.label      :year, 'Year(s)'
        = f.text_field :year,  class: 'form-control',    placeholder: "Dates of interest, i.e. 2009 - 2011"
      

      .form-group
        = f.label      :abstract
        = f.text_area  :abstract, class: 'form-control', placeholder: "Summarize what you are trying to visualize."
      

      .form-group
        = f.label      :issue_area_ids, 'Topics'
        %p.small Hold down Control (PC) or Command (Mac) to select multiple topics.
        = f.collection_select :issue_area_ids,  IssueArea.all,  :id, :title, {}, {multiple: true, class: 'form-control'}
      

      .form-group
        = f.label      :data_source_ids, 'Data Sources'
        %p.small Hold down Control (PC) or Command (Mac) to select multiple data sources.
        = f.collection_select :data_source_ids, DataSource.all, :id, :title, {}, {multiple: true, class: 'form-control'}
      

      .form-group
        = f.label      :institution_id
        %br
        - if institutions_exist?
          -# = f.collection_select(:institution_id, institutions, :id, :short_name)
        - else
          None
      

      .form-group
        = f.label      :permission, 'Public or Private?'
        %p.small
          Public visualizations are displayed in the gallery, and can be viewed and shared.
        = select_tag('visualization[permission]', options_for_select([['Public','public'],['Private','private']], 'public'))

      = f.hidden_field :sessionstate

      = f.submit button, class: 'btn btn-large btn-success'
      
      - if params[:action] == "edit"
        = link_to 'Destroy', @visualization, method: :delete, class: "danger", data: { confirm: "Are you sure? You cannot undo deletion." }