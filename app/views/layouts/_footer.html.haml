.footer
  .container
    .row

      .col-sm-3.col-xs-6
        %h5 Data & Maps
        %ul
          %li= link_to 'Data Catalog',          datasets_path
          %li= link_to 'Map Gallery',           static_maps_path

      .col-sm-3.col-xs-6
        %h5 Visualizations
        %ul
          %li= link_to 'Visualization Gallery', visualizations_path
          %li= link_to 'Make a Visualization',  new_visualization_path


      .col-sm-3.col-xs-6
        %h5 Profiles & Resources
        %ul
          %li= link_to 'Community Profiles', snapshots_path
          %li= link_to 'Workshops',          'http://www.eventbrite.com/o/mapc-610093971', target: '_blank'
          %li= link_to 'Blog',               'http://uncommondata.tumblr.com/'

      .col-sm-3.col-xs-6
        %h5 Social
        %ul
          %li.social-icon
            = link_to "https://www.facebook.com/MAPCMetroBoston", target: "_blank" do
              = image_tag 'facebook_50.png', alt: 'MAPC Facebook'
          %li.social-icon
            = link_to "http://twitter.com/MAPCMetroBoston", target: "_blank" do
              = image_tag 'twitter_50.png',  alt: 'MAPC Twitter'
          %li.social-icon
            = link_to "https://www.flickr.com/photos/44747327@N04/", target: "_blank" do
              = image_tag 'flickr_50.png',   alt: 'MAPC Flickr'

    .row
      = render partial: 'institutions/logo', collection: @institution.logos

    .page-header

    .row.lower
      .col-sm-1.col-xs-12
        .center
          = link_to 'http://mapc.org', target: '_blank' do
            = image_tag 'logos/mapc-white.png', alt: 'MAPC Logo', class: 'logo'
      .col-sm-10.col-xs-12
        %p.center
          = link_to '60 Temple Place Boston, MA 02111', 'http://bit.ly/1pWTuru', target: '_blank'
          617-451-2770
          = link_to 'hello@datacommon.org', 'mailto:hello@datacommon.org'
          %a{ href: '#', data: { toggle: 'modal', target: '#legal' } } Legal
        = render partial: 'layouts/legal' unless Rails.env == 'test'
