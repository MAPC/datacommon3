!!! 5
%html
  %head
    %title DataCommon
    = stylesheet_link_tag    'application', 'data-turbolinks-track' => true, media: 'all'
    = javascript_include_tag 'application'
    = stylesheet_link_tag    'http://cdn.leafletjs.com/leaflet-0.7.3/leaflet.css'
    = javascript_include_tag 'http://cdn.leafletjs.com/leaflet-0.7.3/leaflet.js'
    %meta{name: "viewport", content: "width=device-width, initial-scale=1"}
    = csrf_meta_tags
  %body

    .row.featured
      = yield :featured
    
    .container
      .row
        = render 'layouts/header'
        = render 'layouts/flash'

      .row
        .container
          = yield

    -# outside container for full width
    = render 'layouts/footer'
    = debug(params) if Rails.env.development?

