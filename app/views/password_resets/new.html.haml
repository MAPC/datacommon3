- provide :title, "Forgot password"
%h1 Forgot password

.row
  .col-md-6.col-md-offset-3
    = form_for(:password_reset, url: password_resets_path) do |f|
      .form-group
        = f.label :email
        = f.email_field :email, class: 'form-control'
      .form-group
        = f.submit "Request password reset", class: "btn btn-primary"