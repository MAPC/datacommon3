%h1= link_to "< Layers", layers_path

%h2= @layer.title
%p=  @layer.description

.row
  -# .col-sm-6.col-xs-12
  -#   #map.tall
   

  .col-sm-6.col-xs-12

    %table.metadata
      %tr
        %td Category
        %td #{@layer.category}
      %tr
        %td Creator
        %td #{@layer.creator}
      %tr
        %td Publisher
        %td #{@layer.publisher}
      %tr
        %td Dates Available
        %td #{@layer.datesavail}
      %tr
        %td Spatial Coverage
        %td #{@layer.coverage}
      %tr
        %td Last Updated
        %td #{@layer.moddate}
      %tr
        %td
          Universe
          %br
          %small
            %a{href: '#', data: {toggle: 'modal', target: '#universe'}} What is a 'universe'?
        %td #{@layer.universe}

      #universe.modal.fade{role: 'dialog'}
        .modal-dialog
          .modal-content
            .modal-header
              %button.close{type: 'button', data: {dismiss: 'modal'}} &times;
              %h3 What is a 'universe'?
            .modal-body
              %p
                The total number of units in the population of interest. For example, the universe for 'Population' is the total population, whereas the universe for 'Labor Force' is the population ages 16 and older, since 16 is the legal age for working in the U.S.
            .modal-footer
              %button.btn.btn-default{type: 'button', data: {dismiss: 'modal'}} Close window


    .center

      .dropdown.btn-group
        %a.btn.btn-success.dropdown-toggle{href: '#', data: {toggle: "dropdown"}}
          %span.glyphicon.glyphicon-cloud-download
          Download Layer and Metadata
          %span.caret
        %ul.dropdown-menu
          %li.dropdown-header Spatial
          - @layer.spatial_extents.each do |extent|
            %li= link_to "#{extent}", '#'
          

:javascript

$(document).on('ready', function () {

  var map   = L.map('map', {scrollWheelZoom: false}).setView([42.3580, -71.0616], 12),
      tiles = L.tileLayer("http://tiles.mapc.org/basemap/{z}/{x}/{y}.png", {
          attribution: 'Tiles by <a href="http://www.mapc.org/" target="_blank">Metropolitan Area Planning Council</a>.',
          maxZoom:      17
    }).addTo(map);
});